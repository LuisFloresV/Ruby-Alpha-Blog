<div class="container mb-5">
    <h1 class="my-3 text-center">Listing all articles:</h1>
    <%@articles.each do |article|%>
        <div class="card text-center my-4 shadow mb-5 bg-white rounded">
            <div class="card-header">
                <%= article.user.username %>
            </div>
            <div class="card-body">
                <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-danger" %></h5>
                <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                <%= link_to "View", article_path(article), class: "btn btn-outline-dark"%>
                <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-secondary"%>
                <%= link_to 'Delete', article_path(article), method: :delete , data: { confirm:"Are u sure?"}, class: "btn btn-outline-danger" %>
            </div>
        <div class="card-footer text-muted">
            <small> Created <%= time_ago_in_words(article.created_at)%> ago Edited <%= time_ago_in_words(article.updated_at)%> ago!
            </small>
        </div>
    </div>
<%end%>
</div>

