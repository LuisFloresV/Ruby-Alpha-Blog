
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
<%@articles.each do |article|%>
    <tbody>
    <tr>
    <td><%= article.title %></td>
    <td><%= article.description %></td>
    <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm:"Are u sure?"} %></td>
    <td><%= link_to 'Update', edit_article_path(article) %></td>
    <td><%= link_to 'Detail', article_path(article) %></td>
    </tr>
    </tbody>
<%end%>
</table>
  <p><%= link_to 'Create new article', new_article_path %></p>