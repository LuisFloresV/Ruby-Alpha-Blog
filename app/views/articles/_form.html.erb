<%= render 'shared/errors'%>

<div class="container mt-4 ">
<%= form_with(model: @article, class: "shadow mb-5 p-3 bg-dark text-white rounded",local: true) do |f|%>
    <div class="form-group row">
            <%= f.label :title, class: "col-12 col-md-2 col-form-label"%><br/>
        <div class="col-12 col-md-10">
            <%= f.text_field :title, class:"form-control" , placeholder: "Title of the article"%>
        </div>
        
    </div>
    <div class="form-group row">
            <%= f.label :description, class: "col-12 col-md-2  col-form-label"%><br/>
        <div class="col-12 col-md-10">
            <%= f.text_area :description, rows: 5, class:"form-control", placeholder: "Description of the article"%>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-light"%>
    </div>       
<% end %>
<%= link_to '[Cancel and return to Articles]',articles_path%>
</div>
