<div class="container mb-5">
    <h1 class="my-3 text-center">Categories</h1>
  <div class="flickr_pagination mb-3">
    <%= will_paginate @users, :container => false %>
    </div>
      <%@categories.each do |category|%>
        <div class="card text-center my-4 shadow mb-5 bg-white rounded">
            <div class="card-body">
                <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-danger" %></h5>
                 <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
            </div>
        <div class="card-footer text-muted">
            <small> Created <%= time_ago_in_words(category.created_at)%> ago Edited <%= time_ago_in_words(category.updated_at)%> ago!
            </small>
        </div>
    </div>
<%end%>
</div>

